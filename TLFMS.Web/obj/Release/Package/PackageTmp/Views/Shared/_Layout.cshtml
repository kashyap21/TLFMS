        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Lable.ApplicationName, ActionName.TicketIndex, ControllerName.Ticket, null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav k-menu">
@*                    <li>@Html.ActionLink(Lable.Ticket, ActionName.TicketIndex, ControllerName.Ticket)</li>*@
                    <li>@Html.ActionLink(Lable.TicketGenerate, ActionName.TicketGenerate, ControllerName.Ticket)</li>
                    <li>@Html.ActionLink(Lable.CallLog, ActionName.CallLogIndex, ControllerName.CallLog)</li>
                    <li>@Html.ActionLink(Lable.FMSSLA, ActionName.FMSSLAIndex, ControllerName.FMSSLA)</li>
                    <li>@Html.ActionLink(Lable.Configuration, ActionName.ConfigurationIndex, ControllerName.Configuration)</li>
                 @*   <li>@Html.ActionLink(Lable.CustomerMgt, ActionName.CustomerMgtIndex, ControllerName.Customer)</li>*@
                    @*<li>@Html.ActionLink(Lable.ProjectMgt, ActionName.ProjectMgtIndex, ControllerName.Project)</li>*@
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Projects
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Project">Project Management</a></li>
                            <li><a href="~/Customers">Customer Management</a></li>
                            <li><a href="~/Timesheet">Timesheet Management (IND)</a></li>
                            <li><a href="~/Timesheet/NLIndex">Timesheet Management (NL)</a></li>
                            <li><a href="~/Timesheet/TimesheetReportSummery">Timesheet Report Summery</a></li>


                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


