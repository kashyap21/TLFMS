@{
    ViewBag.Title = "Log in";
}
@{
    Layout = null;
}

<!--Pulling Awesome Font -->
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />

<title>LogIn - TLFCS</title>
<div class="Header">
</div>
   @using (Html.BeginForm()) { 
    <div class="container" style="margin-top:10%;">
    <div class="row" style="width:100vw;">
        <div class="col-md-offset-4 col-md-4">
            <div class="form-login" style="width:100%;height:100%">
                <h4>Log in</h4>
                <input type="text" id="userName" name="name" class="form-control input-sm chat-input" placeholder="username" required />
                <br />
                <input type="password" id="userPassword" name="password" class="form-control input-sm chat-input" placeholder="password" required />
                <br />
                <label class="" style="letter-spacing:1px; font-weight:200; margin-left:1em;">
                    <input type="checkbox" name="rememberme"> Remember me
                </label>
                <br />
                      
                <div class="wrapper">
                    <br />
                    <span class="group-btn">
                        <input type="submit" value="Login" class="btn btn-primary btn-md" />
                    </span><br />
                </div>
                @{
       // Store length of current url
       string currentUrl = Request.Url.AbsoluteUri;
       char cLastCharacter = currentUrl[currentUrl.Length - 1];

       if (cLastCharacter == '1')
       {
        <center><h3 style="color:red">Invalid User Name or Password</h3></center>
       }
                }
            </div>
        </div>

    </div>
</div>   
}


<style>
    body {
        background-color: #fff;
        -webkit-font-smoothing: antialiased;
        font: normal 14px Roboto,arial,sans-serif;
    }

    .container {
        padding: 25px;
        position: fixed;
    }

    .form-login {
        background-color: #EDEDED;
        padding-top: 10px;
        padding-bottom: 20px;
        padding-left: 20px;
        padding-right: 20px;
        border-radius: 15px;
        border-color: #d2d2d2;
        border-width: 5px;
        box-shadow: 0 1px 0 #cfcfcf;
    }

    h4 {
        border: 0 solid #fff;
        border-bottom-width: 1px;
        padding-bottom: 10px;
        text-align: center;
    }

    .form-control {
        border-radius: 10px;
    }

    .wrapper {
        text-align: center;
    }

    .header {
        position: relative;
        float: left;
        left: 1.00%;
        width: 97.00%;
        height: 65px;
        background: url(../Content/Img/logo.png) no-repeat;
        background-position: 12px 1px;
    }
 
</style>